{
  
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "lib": [ "es2015", "dom","es2017","es6", "es2019" ],
    "typeRoots": ["node_modules/@types"] 
},
  "include": [
    "root/src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "root/src/ts/**/*.spec.ts"
  ]
}
